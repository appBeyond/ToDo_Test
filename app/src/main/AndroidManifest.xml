<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app.beyond.todo_list">

    <application
        android:name="app.beyond.todo_list.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_todos"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_todos_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="false">
        <activity
            android:name="app.beyond.todo_list.SettingsActivity"
            android:label="@string/textSettingExplain"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="app.beyond.todo_list.EditActivity"
            android:label="@string/title_activity_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="app.beyond.todo_list.DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="app.beyond.todo_list.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>